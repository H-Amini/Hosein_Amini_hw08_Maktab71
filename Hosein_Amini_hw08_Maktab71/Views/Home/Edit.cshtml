@model PersonModel

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
<h2>ویرایش محصول</h2>

    <form asp-controller="Home" asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Id">شناسه کابر :</label>
        <input class="form-control" type="text" readonly asp-for="PersonId" />
        </div>
    <div class="form-group">
        <label for="ProductName">نام :</label>
        <input class="form-control" type="text" asp-for="PersonFirstName"/>
    </div>
    <div class="form-group">
        <label for="ProductCount">نام خانوادگی :</label>
        <input class="form-control" type="text" asp-for="PersonLastName">
    </div>
    <div class="form-group">
        <label for="price">تاریخ تولد :</label>
        <input class="form-control" type="date" asp-for="PersonDateOfBirth"/>
    </div>
    <div class="form-group">
        <label for="price">تلفن :</label>
        <input class="form-control" type="tel" asp-for="PersonPhoneNumber"/>
    </div>
    <div class="form-group">
            <input class="btn btn-success" type="submit" value="ثبت">
    </div>
    </form>
</div>